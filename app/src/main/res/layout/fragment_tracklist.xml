<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TracklistFragment">

    <TextView
        android:id="@+id/fragment2Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="182dp"
        android:fontFamily="cursive"
        android:text="@string/treas_epilogue"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tracklistCover"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="134dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="25dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tracklistCover" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toBottomOf="@id/separator"
        tools:layout_editor_absoluteX="10dp"
        tools:listitem="@layout/list_item2" />


</androidx.constraintlayout.widget.ConstraintLayout>
